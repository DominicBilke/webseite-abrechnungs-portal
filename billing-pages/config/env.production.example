# Billing Portal - Environment Configuration
# Copy this file to .env and update the values for your production environment

# Application Settings
APP_NAME="Billing Portal"
APP_URL="https://your-domain.com"
APP_ENV="production"
APP_DEBUG=false

# Database Configuration
DB_HOST="localhost:3306"
DB_NAME="billing_system"
DB_USER="your_db_user"
DB_PASS="your_secure_password"

# Session Security
SESSION_SECRET="your-super-secure-random-session-secret-key"
SESSION_LIFETIME=3600

# File Upload Settings
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES="jpg,jpeg,png,pdf,doc,docx"

# Localization
DEFAULT_LOCALE="de"

# Security Settings
ENABLE_HTTPS=true
FORCE_HTTPS=true

# Email Settings (for invoice sending)
SMTP_HOST="smtp.your-provider.com"
SMTP_PORT=587
SMTP_USERNAME="your-email@domain.com"
SMTP_PASSWORD="your-email-password"
SMTP_ENCRYPTION="tls"

# Backup Settings
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30
BACKUP_PATH="/path/to/backups" 